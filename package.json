{
  "name": "nextjs-challenge-boilerplate",
  "version": "1.0.0",
  "description": "A basic boilerplate for nextjs challenge",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "dev": "npm run format && cross-env NODE_ENV=development npm start",
    "format": "prettier-standard \"{app,components,config,pages,test}/**/*.js\"",
    "lint": "standard",
    "precommit": "lint-staged",
    "start": "node ./server",
    "test": "cross-env NODE_ENV=test NODE_PATH=./ mocha --reporter dot",
    "coverage": "nyc --reporter html --reporter text npm test"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "mocha"
    ]
  },
  "lint-staged": {
    "linters": {
      "{app,components,config,pages,test}/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remedyhealth/nextjs-challenge-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/remedyhealth/nextjs-challenge-boilerplate/issues"
  },
  "homepage": "https://github.com/remedyhealth/nextjs-challenge-boilerplate#readme",
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "isomorphic-unfetch": "^3.0.0",
    "jss": "^9.8.7",
    "next": "^7.0.2",
    "prop-types": "^15.7.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-jss": "^8.6.1"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/register": "^7.4.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "expect.js": "0.3.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "5.2.0",
    "nyc": "^14.0.0",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1"
  }
}
