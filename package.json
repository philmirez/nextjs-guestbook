{
  "name": "nextjs-challenge-boilerplate",
  "version": "1.0.0",
  "description": "A basic boilerplate for nextjs challenge",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "dev": "cross-env NODE_ENV=development npm start",
    "format": "prettier-standard \"{src,pages,app,test}/**/*.js\"",
    "lint": "standard",
    "precommit": "lint-staged",
    "start": "node ./server",
    "test": "prettier-standard && node test/test.js"
  },
  "lint-staged": {
    "linters": {
      "{src,pages,app,test}/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remedyhealth/nextjs-challenge-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/remedyhealth/nextjs-challenge-boilerplate/issues"
  },
  "homepage": "https://github.com/remedyhealth/nextjs-challenge-boilerplate#readme",
  "dependencies": {
    "express": "^4.16.4",
    "next": "^7.0.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1"
  }
}
